<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h2 style="border-bottom:2px solid black;">The Dojo Message Board</h2>
    <div class="">
      <form class="" action="/message" method="post">
        Name:
        <input type="text" name="name" value="">
        Message:
        <textarea name="text" rows="8" cols="80"></textarea>
        <button style="background-color:green; color:white;"type="submit" name="button">Post message</button>
      </form>
    </div>

    <div class="">
      <% if(typeof(errors) != 'undefined' ) { %>
	     <% for (var x in errors) { %>
	      <h3><%= errors[x].message %></h3>
	     <% } %>
 	 <% } else { %>
 	 	<div>
			<% for(x in messages) { %>
				<div>
					<h3>Name: <%= messages[x].name %></h3>
					<h3>Message: <%= messages[x].message %></h3>
					<% for (y in messages[x]._comments) { %>
						<h5><%="Name: " + messages[x]._comments[y].name %></h5>
						<h5><%="Comment: " + messages[x]._comments[y].text %></h5>
					<% } %>

					<form action=<%="/comment/" + messages[x]._id %> method="post">
						<p class="margin">Name: </p><input class="comment_input" type="text" name="name">
						<p class="margin">Comment: </p><textarea class="comment_text"name="comment"></textarea>
						<input class="post2" type="submit" value="Post comment">
					</form>
				</div>
			<% } %>
		</div>
 	<% } %>
    </div>
  </body>
</html>
